{
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": "./src",
        "target": "es5",
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "module": "es6",
        "moduleResolution": "node",
        "noEmit": false,
        "jsx": "react-jsx",
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            }
        ]
    },
    "include": ["src"]
}
